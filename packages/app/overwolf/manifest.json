{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Trophy Hunter PUBG",
    "version": "1.1.0",
    "minimum-overwolf-version": "0.108.209.0",
    "author": "Leon Machens",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "description": "Earn Trophies for playing PUBG.",
    "launcher_icon": "TrophyHunter.ico"
  },
  "permissions": ["DesktopStreaming", "Extensions", "Streaming", "Profile", "GameInfo", "Hotkeys"],
  "protocol_override_domains": {
    "googlesyndication": "http"
  },
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [10906]
    },
    "hotkeys": {
      "th_pubg": {
        "title": "Show App",
        "action-type": "custom",
        "default": "Shift+F1"
      }
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [10906]
        },
        "start_minimized": false
      }
    ],
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": ["https://pubg-api.th.gl"]
    },
    "start_window": "MainWindow",
    "windows": {
      "MainWindow": {
        "file": "index.html",
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": true,
        "keep_window_location": true,
        "in_game_only": false,
        "desktop_only": false,
        "native_window": true,
        "use_os_windowing": true,
        "popup_blocker": true,
        "min_size": {
          "width": 600,
          "height": 420
        },
        "max_size": {
          "width": 1222,
          "height": 720
        },
        "size": {
          "width": 1222,
          "height": 720
        },
        "block_top_window_navigation": true,
        "mute": true,
        "enable_top_isolation": true
      }
    }
  }
}
