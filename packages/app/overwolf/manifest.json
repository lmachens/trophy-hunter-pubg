{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Trophy Hunter PUBG",
    "version": "1.2.1",
    "minimum-overwolf-version": "0.108.209.0",
    "author": "Leon Machens",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "description": "Earn Trophies for playing PUBG.",
    "launcher_icon": "TrophyHunter.ico"
  },
  "permissions": ["DesktopStreaming", "Extensions", "Streaming", "Profile", "GameInfo", "Hotkeys"],
  "protocol_override_domains": {
    "googlesyndication": "http"
  },
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [10906]
    },
    "hotkeys": {
      "th_pubg": {
        "title": "Show App",
        "action-type": "custom",
        "default": "Shift+F1"
      }
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [10906]
        },
        "start_minimized": false
      }
    ],
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": ["https://pubg-api.th.gl", "https//matomo.machens.cloud"]
    },
    "start_window": "ControllerWindow",
    "windows": {
      "ControllerWindow": {
        "file": "controller.html",
        "min_size": {
          "width": 0,
          "height": 0
        },
        "max_size": {
          "width": 0,
          "height": 0
        },
        "size": {
          "width": 0,
          "height": 0
        },
        "start_position": {
          "top": 0,
          "left": 0
        },
        "transparent": true,
        "clickthrough": true,
        "show_in_taskbar": false,
        "desktop_only": true,
        "grab_keyboard_focus": false,
        "grab_focus_on_desktop": false
      },
      "MainWindow": {
        "file": "index.html",
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": true,
        "keep_window_location": true,
        "in_game_only": false,
        "desktop_only": true,
        "native_window": true,
        "use_os_windowing": true,
        "popup_blocker": true,
        "min_size": {
          "width": 450,
          "height": 420
        },
        "size": {
          "width": 660,
          "height": 670
        },
        "start_position": {
          "top": 100,
          "left": 100
        },
        "block_top_window_navigation": true,
        "mute": true,
        "enable_top_isolation": true
      },
      "OverlayWindow": {
        "file": "index.html",
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": false,
        "keep_window_location": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "th_pubg",
        "in_game_only": true,
        "desktop_only": false,
        "popup_blocker": true,
        "min_size": {
          "width": 450,
          "height": 420
        },
        "size": {
          "width": 660,
          "height": 670
        },
        "start_position": {
          "top": 100,
          "left": 100
        },
        "block_top_window_navigation": true,
        "mute": true,
        "enable_top_isolation": true
      }
    },
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 3000,
      "filter": "*.*"
    }
  }
}
