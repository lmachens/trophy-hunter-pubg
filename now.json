{
  "version": 2,
  "name": "pubg",
  "alias": ["pubg.th.gl"],
  "build": {
    "env": {
      "TH_PUBG_API": "https://pubg.th.gl/api",
      "GITHUB_TOKEN": "@github_token",
      "MATOMO_ID": "1",
      "MATOMO_URL": "https://matomo.machens.cloud/matomo.php"
    }
  },
  "env": {
    "PUBG_API_KEY": "@pubg_api_key"
  },
  "builds": [
    { "src": "packages/api/endpoints/**/*.ts", "use": "@now/node" },
    { "src": "packages/app/next.config.js", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/packages/api/endpoints/$1" },
    {
      "src": "/(.*)",
      "dest": "/packages/app/$1",
      "headers": {
        "x-request-path": "$1"
      }
    },
    {
      "src": "^/service-worker.js$",
      "dest": "/_next/static/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=43200, immutable",
        "Service-Worker-Allowed": "/"
      }
    }
  ]
}
